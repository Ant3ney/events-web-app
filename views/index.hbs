    <div class="container">
		<div class="row">
			<div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
				<h1>Events</h1>
        {{#if events.length }}
  				<div id="events-map"></div>
        {{/if}}
				</hr>
				<ul class="event-list">
				{{#each events}}
          {{#if this.yearChanged}}
  					<h2 class="text-center">{{this.startYear}}</h2>
          {{/if}}
          <li class="{{this.eventType}}">
						{{#if this.addressLine_2}}
							<input type="hidden" name="addresses[]" class="js-address" data-title="{{this.title}}" data-href="/frounted/event/details/events/{{ this._id }}" value="{{this.addressLine_1}}, {{this.addressLine_2}}, {{this.region}}, {{this.city}}">
						{{else}}
							<input type="hidden" name="addresses[]" class="js-address" data-title="{{this.title}}" data-href="/frounted/event/details/events/{{ this._id }}" value="{{this.addressLine_1}}, {{this.region}}, {{this.city}}">
						{{/if}}
						<time datetime="2014-07-20">
							<span class="day">{{this.stratDate}}</span>
							<span class="month">{{this.startMonth}}</span>
							<span class="time">ALL DAY</span>
						</time>
						<div class="info">
							<h2 class="title"><a href="/frounted/event/details/events/{{ this._id }}" style="text-decoration: none;" >	{{this.name}}</a></h2>
							<p class="desc">{{this.city}} - {{this.postCode}}</p>
						</div>
					</li>
				{{/each}}
				{{#unless events.length }}
					<p>No any event available</p>
				{{/unless}}
				</ul>
			</div>
		</div>
	</div>
